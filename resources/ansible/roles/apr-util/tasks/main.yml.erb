---
- name: Download APR-utile
  get_url:
    url: "https://downloads.apache.org//apr/apr-util-{{ version }}.tar.gz"
    dest: "{{ src_dir }}"
    validate_certs: no

- name: Unarchive APR-util
  unarchive:
    src: "{{ src_dir }}/apr-util-{{ version }}.tar.gz"
    dest: "{{ src_dir }}"
    copy: no

- name: ./configure
  shell: "{{ configure }}"
  args:
    chdir: "{{ src_dir }}/apr-util-{{ version }}"

- name: make
  shell: make
  args:
    chdir: "{{ src_dir }}/apr-util-{{ version }}"

- name: make install
  shell: make install
  args:
    chdir: "{{ src_dir }}/apr-util-{{ version }}"
